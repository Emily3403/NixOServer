[global]
ioengine=libaio
direct=1
group_reporting=1
time_based=1
runtime=180s
ramp_time=10s
iodepth=32

directory=/data/Testing
filename_format=fio-test-$jobnum

# TODO: Adjust numbers
numjobs=16
size=20G

[torrent-seeding-128k]
stonewall
rw=randread
bs=128k

[torrent-downloading-128k]
stonewall
rw=randwrite
bs=128k

# ---

[torrent-seeding-256k]
stonewall
rw=randread
bs=256k

[torrent-downloading-256k]
stonewall
rw=randwrite
bs=256k

# ---

[torrent-seeding-512k]
stonewall
rw=randread
bs=512k

[torrent-downloading-512k]
stonewall
rw=randwrite
bs=512k

# ---

[torrent-seeding-1m]
stonewall
rw=randread
bs=1m

[torrent-downloading-1m]
stonewall
rw=randwrite
bs=1m


[sequential-read-large]
stonewall
rw=read
bs=1m
numjobs=1

[sequential-write-large]
stonewall
rw=write
bs=1m
numjobs=1

[sequential-read-multi]
stonewall
rw=read
bs=1m

[sequential-write-multi]
stonewall
rw=write
bs=1m
